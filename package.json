{
  "name": "laserfocus-host",
  "version": "0.1.0",
  "description": "MCP Host Server for real-time LLM chat with tool integration",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsc-watch --onSuccess \"node dist/server.js\"",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byOdysea/laserfocus-host.git"
  },
  "keywords": [
    "mcp",
    "llm",
    "chatbot",
    "websocket",
    "typescript",
    "fastify"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/byOdysea/laserfocus-host/issues"
  },
  "homepage": "https://github.com/byOdysea/laserfocus-host#readme",
  "dependencies": {
    "@fastify/websocket": "^8.2.0",
    "@google/generative-ai": "^0.1.3",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  }
}
